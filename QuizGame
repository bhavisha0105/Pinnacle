import java.util.Scanner;

class Question {
    String questionText;
    String[] options;
    char correctAnswer;

    public Question(String questionText, String[] options, char correctAnswer) {
        this.questionText = questionText;
        this.options = options;
        this.correctAnswer = correctAnswer;
    }

    public void displayQuestion() {
        System.out.println(questionText);
        char optionLabel = 'A';
        for (String option : options) {
            System.out.println(optionLabel + ": " + option);
            optionLabel++;
        }
    }

    public boolean checkAnswer(char answer) {
        return Character.toUpperCase(answer) == Character.toUpperCase(correctAnswer);
    }
}

class QuizGame {
    private Question[] questions;
    private int score;

    public QuizGame(Question[] questions) {
        this.questions = questions;
        this.score = 0;
    }

    public void start() {
        Scanner scanner = new Scanner(System.in);
        System.out.println("Welcome to the Quiz Game!");
        System.out.println("Please enter the corresponding letter (A/B/C/D) for your answer.\n");

        for (int i = 0; i < questions.length; i++) {
            System.out.println("Question " + (i + 1) + ":");
            questions[i].displayQuestion();
            System.out.print("Your answer: ");
            char userAnswer = scanner.next().charAt(0);

            if (questions[i].checkAnswer(userAnswer)) {
                System.out.println("Correct!\n");
                score++;
            } else {
                System.out.println("Incorrect. The correct answer was " + questions[i].correctAnswer + ".\n");
            }
        }
        
        System.out.println("Quiz finished!");
        System.out.println("Your total score: " + score + "/" + questions.length);
        scanner.close();
    }
}

public class Main {
    public static void main(String[] args) {
        // Creating the quiz questions
        Question[] questions = new Question[3];
        questions[0] = new Question("What is the capital of France?", new String[]{"Berlin", "Madrid", "Paris", "Rome"}, 'C');
        questions[1] = new Question("Which planet is known as the Red Planet?", new String[]{"Earth", "Mars", "Jupiter", "Saturn"}, 'B');
        questions[2] = new Question("Which element does 'O' represent on the periodic table?", new String[]{"Oxygen", "Osmium", "Gold", "Oxide"}, 'A');

        // Starting the quiz
        QuizGame quiz = new QuizGame(questions);
        quiz.start();
    }
}
